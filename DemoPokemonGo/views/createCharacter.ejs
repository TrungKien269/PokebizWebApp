<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/createCharacter.css">
    <script src="/js/jquery-3.3.1.slim.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/createCharacter.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.2/TweenMax.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <title>Create Character</title>
</head>

<body>
    <div class="body-create-figure">
        <div class="background-figure"></div>
        <div class="selected-figure">
            <img src="/images/characters/Satoshi.png" style="height: 370px" alt="">
            <input type="text" class="form-control" placeholder="Nickname" autofocus id="txtNickname" autocomplete="off">
            <button type="button" class="btn btn-primary" id="btnCreate">
                Create Character
            </button>
            <button type="button" class="btn btn-block" id="btnLogout">Log out</button>
        </div>
        <!-- hết nhân vật được chọn -->
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div id="Satoshi">
                        <img src="/images/characters/Satoshi.png" alt="">
                    </div>
                    <div id="Takeshi">
                        <img src="/images/characters/Takeshi.png" alt="">
                    </div>
                    <div id="James">
                        <img src="/images/characters/James.png" alt="">
                    </div>
                    <div id="Jessie">
                        <img src="/images/characters/Jessie.png" alt="">
                    </div>
                    <div id="May">
                        <img src="/images/characters/May.png" class="img-fluid" alt="">
                    </div>
                </div>
            </div>
        </div>
        <!-- hết nơi chọn nhân vật -->
    </div>
</body>

</html>
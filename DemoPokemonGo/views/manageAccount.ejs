<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/manageAccount.css">
    <link href="https://fonts.googleapis.com/css?family=Lemonada:400,600,700&display=swap&subset=vietnamese" rel="stylesheet">

    <script src="/js/jquery-3.3.1.slim.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/manageAccount.js"></script>
    <title>Document</title>
</head>

<body>
    <div class="background-taikhoan">
        <h1 class="text-center">Quản lý tài khoản</h1>
        <div class="content">
            <div class="container h-100">
                <div class="header">
                    <div class="row">
                        <div class="col-sm-3 text-center">Avatar</div>
                        <div class="col-sm-3 text-center">Nickname</div>
                        <div class="col-sm-3 text-center">Level</div>
                        <div class="col-sm-3 text-center">Block - Open</div>
                    </div>

                </div>
                <div class="list-taiKhoan" id="style-1">
                    <% for(var i = 0; i < data.length; i++){ %>
                    <div class="row d-flex align-items-center motNhanVat">
                        <div class="col-sm-3">
                            <div class="anhDaiDien">
                                <% if(data[i].Avatar.length != 0) { %>
                                <% id = data[i].Avatar[0].character_id - 1 %>
                                <img src="/images/characters/<%= data[i].Character[id].name %>.png" alt="">
                                <%  }%>
                            </div>
                        </div>
                        <div class="col-sm-3 text-center ten" value="<%= data[i].nickname %>">
                            <%= data[i].nickname %>
                        </div>
                        <div class="col-sm-3 text-center level">
                            <%= data[i].Level[0].level %>
                        </div>
                        <div class="col-sm-3 text-center dong-mo">
                            <% if(data[i].status == 0) { %>
                            <button class="btn my-button">
                                <div class="nut"></div>
                            </button>
                            <%  } else {%>
                            <button class="btn my-button active-button">
                                <div class="nut"></div>
                            </button>
                            <%  }%>
                        </div>
                    </div>
                    <%  }%>
                    <!-- hết một nhân vật -->
                </div>
            </div>
        </div>
    </div>
</body>

</html>